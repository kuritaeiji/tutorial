<% provide(:title, 'home') %>
<% if logged_in? %>
  <div class="row">
    <div class="col-md-4">
      <section class="user-info">
        <%= render('shared/user_info') %>
      </section>
      <section class="followers-followings-count">
        <%= render('shared/status') %>
      </section>
      <section class="micropost-form">
        <%= render('shared/micropost_form') %>
      </section>
    </div>

    <div class="col-md-8">
      <h3>マイクロポストフィード</h3>
      <%= render('shared/feed') %>
    </div>
  </div>
<% else %>
  <div class="text-center jumbotron">
    <h1>ようこそサンプルアプリへ</h1>
    <h2>
      This is the home page for the
      <a href="https://railstutorial.jp/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>
    <%= link_to('ユーザー登録', sign_up_path, class: 'btn btn-lg btn-primary') %>
  </div>

  <%= link_to(image_pack_tag('rails.png', alt: 'rails-logo'), 'http://rubyonrails.org/') %>
<% end %>

