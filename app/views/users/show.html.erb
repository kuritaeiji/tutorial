<%= provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <%= gravatar_for(@user) %>
    <h1><%= @user.name %></h1>
    <%= render('follow_form') %>
  </div>
  <div class="col-md-8">
    <% unless @microposts.empty? %>
      <h2>マイクロポスト（<%= @user.microposts.count %>）</h2>
      <%= render(@microposts) %>
      <%= will_paginate(@microposts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer) %>
    <% end %>
  </div>
</div>